{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "20.1.0",

  "compilerOptions": {
    "lib": ["es2023"],
    "module": "Node16",
    "target": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node16",
    "outDir": "dist",  // Diretório de saída para os arquivos compilados
    "rootDir": "src"   // Diretório de onde o TypeScript irá compilar
  },
  "include": ["src/**/*.ts"],  // Inclui todos os arquivos .ts na pasta src
  "exclude": ["node_modules", "dist"]  // Exclui node_modules e a pasta dist
}
